<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GlobalAttrs">
        <attr name="rippleColor" format="color" />

        <attr name="background_onSelection" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="SegmentedButton">
        <attr name="rippleColor" />

        <attr name="background" />
        <attr name="selectedBackground" />

        <attr name="drawable" format="reference" />
        <attr name="drawablePadding" format="dimension" />
        <attr name="drawableTint" format="color" />
        <attr name="selectedDrawableTint" format="color" />
        <attr name="drawableWidth" format="dimension" />
        <attr name="drawableHeight" format="dimension" />
        <attr name="drawableKeepAspectRatio" format="boolean" />
        <attr name="drawableGravity" format="integer">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
        </attr>

        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="selectedTextColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="textFillSpace" format="boolean" />
        <attr name="android:fontFamily" format="string" />
        <attr name="textStyle" format="integer">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="textGravity" format="integer">
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center" value="0x11" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SegmentedButtonGroup">
        <attr name="background" />

        <attr name="selectorColor" format="color" />
        <attr name="selectorBackgroundDrawable" format="reference" />

        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="borderDashWidth" format="dimension" />
        <attr name="borderDashGap" format="dimension" />

        <attr name="position" format="integer" />
        <attr name="radius" format="dimension" />

        <attr name="ripple" format="boolean" />
        <attr name="rippleColor" />

        <attr name="dividerBackgroundDrawable" format="reference" />
        <attr name="dividerSize" format="dimension" />
        <attr name="dividerPadding" format="dimension" />
        <attr name="dividerColor" format="color" />
        <attr name="dividerRadius" format="dimension" />

        <attr name="enabled" format="boolean" />
        <attr name="android:clickable" />
        <attr name="draggable" format="boolean" />

        <attr name="animateSelectorDuration" format="integer" />
        <attr name="animateSelector" format="integer">
            <flag name="fastOutSlowIn" value="0" />
            <flag name="bounce" value="1" />
            <flag name="linear" value="2" />
            <flag name="decelerate" value="3" />
            <flag name="cycle" value="4" />
            <flag name="anticipate" value="5" />
            <flag name="accelerateDecelerate" value="6" />
            <flag name="accelerate" value="7" />
            <flag name="anticipateOvershoot" value="8" />
            <flag name="fastOutLinearIn" value="9" />
            <flag name="linearOutSlowIn" value="10" />
            <flag name="overshoot" value="11" />
        </attr>
    </declare-styleable>
</resources>